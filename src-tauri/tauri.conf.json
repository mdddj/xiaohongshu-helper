{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "xiaohongshu-helper",
  "version": "0.0.2",
  "identifier": "com.xiaohongshu-helper.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "xiaohongshu-helper",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self' tauri:; img-src 'self' asset: http://asset.localhost https://asset.localhost https: data:; connect-src 'self' https: tauri:; script-src 'self' 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline';",
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
